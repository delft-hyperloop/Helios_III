{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": {
      "script": "npm run build",
      "wait": true


    },
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false,
    "features" : ["default"]
  },
  "package": {
    "productName": "canzero",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true
      },
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true, 
        "message": true,
        "open": true, 
        "save": true 
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "nsis", "msi", "app", "dmg", "updater"],
      "identifier": "com.hyperloop.mu-zero",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "xcompl/canzero-cli-armv7-unknown-linux-gnueabihf"
      ],
      "windows": {
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    }
  }
}
